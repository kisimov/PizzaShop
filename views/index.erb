<h2>Pizza</h2>

<div class="row">

	<% @products.each do |p| %>
		<div class="col-md-3">
			<div>
				<b><%= p.title %></b>
			</div>
			<div>
				<img src="<%= p.path_to_image %> "/>
			</div>
			<div>
				<%= p.description %>	
			</div>
			<div>
				<%= p.size %>см
			</div>
			<div>
				Price: <%= p.price %>₽
			</div>
			<div>
				<button class="btn btm-sm btn-success" onclick="add_to_cart(<%= p.id %>)">Добавить в корзину</button>
			</div>
 
		</div>
	<% end %>

</div>
