<h2>Your cart!</h2>

<div class="bs-example" data-example-id="striped-table"> 
	<table class="table table-striped"> 
		<thead> 
			<tr> 
				<th>Name</th> 
				<th>Price</th> 
				<th>Qty</th> 
			</tr> 
		</thead> 
		<tbody>
			<% total_price = 0 %>
			<% total_qty = 0 %>
			<% @items.each do |item|%>
				<tr> 
						<td><%= item[0].title %></td> 
						<td><%= item[0].price %>₽</td> 
						<td><%= item[1] %></td> 
				</tr> 
			<% total_price += item[0].price * item[1].to_i %>
			<% total_qty += item[1].to_i %>
			<% end %>

			<tr> 
						<td></td> 
						<td><b>Total: <%= total_price %>₽</b></td> 
						<td><b><%= total_qty %></b></td> 
				</tr> 
		</tbody> 
	</table> 
</div>


<form action="/place_order" method="POST" role="form">

	<input type="hidden" name="order[orders_input]" value="<%= @orders_input %>">

  <div class="form-group">
    <label>Ваше имя</label>
    <input name="order[name]" type="text" class="form-control" placeholder="Ваше имя" >
  </div>

  <div class="form-group">
    <label>Ваш телефон</label>
    <input name="order[phone]" type="text" class="form-control" placeholder="Ваш телефон" >
  </div>

  <div class="form-group">
    <label>Адрес доставки</label>
    <textarea name="order[phone]" type="text" class="form-control" placeholder="Адрес доставки"></textarea>
  </div>

  <button type="submit" class="btn btn-success btn-lg">Заказать</button>

</form>
